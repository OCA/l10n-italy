<openerp>
	<data>
    <record id="fatturapa_related_document_type_view_tree" model="ir.ui.view">
        <field name="name">Tree view for fatturapa.related_document_type</field>
        <field name="model">fatturapa.related_document_type</field>
        <field name="arch" type="xml">
            <tree string="Fattura Pa Related document type">
                <field name="type"/>
                <field name="name"/>
                <field name="lineRef" readonly="1"/>
                <field name="date"/>
                <field name="numitem"/>
                <field name="code"/>
                <field name="cig"/>
                <field name="cup"/>
            </tree>
        </field>
    </record>

    <record id="fatturapa_related_document_type_inline_view_tree" model="ir.ui.view">
        <field name="name">Inline editable tree view for fatturapa.related_document_type</field>
        <field name="model">fatturapa.related_document_type</field>
        <field name="inherit_id" ref="fatturapa_related_document_type_view_tree"/>
        <field name="mode">primary</field>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="editable">bottom</attribute>
            </tree>
        </field>
    </record>

    <record id="fatturapa_related_document_type_view_form" model="ir.ui.view">
        <field name="name">Form view for fatturapa.related_document_type</field>
        <field name="model">fatturapa.related_document_type</field>
        <field name="arch" type="xml">
            <form version="7.0" string="Fattura Pa Related document type">
                <sheet>
                    <group>
                        <group>
                            <field name="type"/>
                            <field name="name"/>
                            <field name="lineRef" readonly="1"/>
                            <field name="date"/>
                            <field name="numitem"/>
                            <field name="code"/>
                            <field name="cig"/>
                            <field name="cup"/>
                        </group>
                        <group groups="base.group_no_one">
                            <field name="invoice_id"/>
                            <field name="invoice_line_id"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <act_window
        id="fatturapa_related_document_type_action"
        name="Related documents"
        res_model="fatturapa.related_document_type"
        view_mode="tree,form"
        view_id="fatturapa_related_document_type_view_tree"
        context="{'create': False, 'edit': False, 'delete': False}"/>

    <menuitem
        id="fatturapa_related_document_type_menu"
        parent="account.menu_finance_payables"
        action="fatturapa_related_document_type_action"/>
    </data>
</openerp>
