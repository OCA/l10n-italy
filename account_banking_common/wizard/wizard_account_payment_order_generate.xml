<odoo>

    <record id="wizard_account_payment_generate" model="ir.ui.view">
        <field name="name">wizard.account.payment.generate.form</field>
        <field name="model">wizard.account.payment.generate</field>
        <field name="arch" type="xml">
            <form string="Create Payment Lines">
                <group>
                    <field name="payment_mode_id" />
                    <field name="journal_id" />
                    <field name="description" />
                </group>

                <footer>
                    <button type="object" name="generate" string="Create" class="oe_highlight"/>
                    <button special="cancel" string="Cancel" class="oe_link"/>
                </footer>
            </form>
        </field>
    </record>

</odoo>

