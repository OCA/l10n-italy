<odoo>
    <record id="riba_past_due" model="ir.ui.view">
        <field name="name">riba.past_due.wizard</field>
        <field name="model">riba.past_due</field>
        <field name="arch" type="xml">
            <form string="Past Due RiBas">
                <separator
                    string="This wizard will generate the journal entry related to an past due RiBa"
                    colspan="4"
                />
                <group>
                    <field name="past_due_journal_id" />
                    <field name="effects_account_id" />
                    <field name="effects_amount" />
                    <field name="riba_bank_account_id" />
                    <field name="riba_bank_amount" />
                    <field name="overdue_effects_account_id" />
                    <field name="overdue_effects_amount" />
                    <field name="bank_account_id" />
                    <field name="bank_amount" />
                    <field name="bank_expense_account_id" />
                    <field name="expense_amount" />
                </group>
                <footer>
                    <button
                        string="Create"
                        name="create_move"
                        type="object"
                        default_focus="1"
                        class="oe_highlight"
                    />
                    <button string="Cancel" special="cancel" class="oe_link" />
                    <separator
                        string="You can also skip this step and set the line status to 'Past Due' anyway"
                        colspan="4"
                    />
                    <button
                        string="Skip and Confirm Past Due"
                        name="skip"
                        type="object"
                        class="oe_link"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="riba_past_due_action" model="ir.actions.act_window">
        <field name="name">Past Due RiBas</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">riba.past_due</field>
        <field name="target">new</field>
        <field name="view_id" ref="riba_past_due" />
    </record>
</odoo>
