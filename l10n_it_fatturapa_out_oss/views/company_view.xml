<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="oss_year_view_company_form" model="ir.ui.view">
        <field name="name">oss.yearcompany.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page string="OSS Year">
                    <field name="oss_year_ids">
                        <tree editable="top">
                            <field name="year"/>
                            <field name="oss_subjected"/>
                        </tree>
                    </field>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
