<odoo>

    <record id="stock_delivery_note_create_form_view" model="ir.ui.view">
        <field name="name">stock.delivery.note.create.form</field>
        <field name="model">stock.delivery.note.create.wizard</field>
        <field name="arch" type="xml">
            <form>
                <field name="picking_type" invisible="True" />
                <div attrs="{'invisible': [('error_message', '=', False)]}">
                    <field name="error_message" />
                </div>
                <group
                    attrs="{'invisible': [('error_message', '!=', False)]}"
                    string="Summary"
                >
                    <group>
                        <field name="partner_sender_id" />
                        <field name="partner_id" />
                        <field name="partner_shipping_id" />
                    </group>
                    <group>
                        <field
                            name="type_id"
                            options="{'no_open': True, 'no_create': True}"
                        />
                        <field name="date" />
                    </group>
                </group>
                <notebook attrs="{'invisible': [('error_message', '!=', False)]}">
                    <page name="pickings" string="Pickings">
                        <field name="selected_picking_ids">
                            <tree decoration-success="True">
                                <field name="name" />
                                <field
                                    name="location_dest_id"
                                    groups="stock.group_stock_multi_locations"
                                />
                                <field name="scheduled_date" />
                                <field name="origin" />
                                <field name="backorder_id" />
                                <field name="state" />
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button
                        name="confirm"
                        type="object"
                        class="btn-primary"
                        string="Confirm"
                        attrs="{'invisible': [('error_message', '!=', False)]}"
                    />
                    <button
                        special="cancel"
                        class="btn-primary"
                        string="Cancel"
                        attrs="{'invisible': [('error_message', '=', False)]}"
                        style="float: right;"
                    />
                    <button
                        special="cancel"
                        class="btn-secondary"
                        string="Cancel"
                        attrs="{'invisible': [('error_message', '!=', False)]}"
                    />
                </footer>
            </form>
        </field>
    </record>

    <record id="stock_delivery_note_create_action" model="ir.actions.act_window">
        <field name="name">Create a new delivery note</field>
        <field name="res_model">stock.delivery.note.create.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="stock_delivery_note_create_form_view" />
        <field name="target">new</field>
        <field
            name="groups_id"
            eval="[(4, ref('l10n_it_delivery_note.use_advanced_delivery_notes'))]"
        />
        <field name="binding_model_id" ref="stock.model_stock_picking" />
        <field name="binding_view_types">list</field>
        <field name="type">ir.actions.act_window</field>
    </record>

</odoo>
