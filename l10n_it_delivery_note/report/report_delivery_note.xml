<odoo>

    <template id="delivery_note_report_template">
        <t t-call="web.external_layout">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)" />
            <div class="page">

                <!--if is an outgoing move -->
                <div t-if="doc.picking_type=='outgoing'" style="display:table;width:100%;padding:1px;">
                    <div style="display:table-row;width:100%;">
                        <div class="well" style="display:table-cell;width:49%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Customer:</strong>
                            </h4>
                            <strong>
                                <span t-field="doc.partner_id.display_name" />
                            </strong>
                            <br/>
                            <span t-field="doc.partner_id.street" />
                            <span t-field="doc.partner_id.street2" />
                            <br/>
                            <span t-field="doc.partner_id.zip" />
                            <span t-field="doc.partner_id.city" />
                            (<span t-field="doc.partner_id.state_id.code" />)
                            <span t-field="doc.partner_id.country_id" />
                            <br/>
                            <t t-if="doc.partner_id.phone">
                                <span>Phone:</span>
                                <span t-field="doc.partner_id.phone" />
                            </t><br/>
                            <t t-if="doc.partner_id.vat">
                                <span>VAT:</span>
                                <span t-field="doc.partner_shipping_id.vat" />
                            </t>
                        </div>

                        <div style="display:table-cell;width:1%;">
                        </div>

                        <div class="well" style="display:table-cell;width:50%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Delivery address:</strong>
                            </h4>
                            <strong>
                                <span t-field="doc.partner_shipping_id.name" />
                            </strong>
                            <br/>
                            <span t-field="doc.partner_shipping_id.street" />
                            <span t-field="doc.partner_shipping_id.street2" />
                            <br/>
                            <span t-field="doc.partner_shipping_id.zip" />
                            <span t-field="doc.partner_shipping_id.city" />
                            (<span t-field="doc.partner_shipping_id.state_id.code" />)
                            <span t-field="doc.partner_shipping_id.country_id" />
                            <br/>
                            <t t-if="doc.partner_shipping_id.phone">
                                <span>Phone:</span>
                                <span t-field="doc.partner_shipping_id.phone" />
                            </t><br/>
                            <t t-if="doc.partner_shipping_id.vat">
                                <span>VAT:</span>
                                <span t-field="doc.partner_shipping_id.vat" />
                            </t>
                        </div>
                    </div>
                </div>

                <!--if is an internal move -->
                <div t-if="doc.picking_type=='internal'" style="display:table;width:100%;padding:1px;">
                    <div style="display:table-row;width:100%;">
                        <div class="well" style="display:table-cell;width:49%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Warehouse:</strong>
                            </h4>
                            <t t-foreach="doc.picking_ids" t-as="pick">
                                <t t-if="location != pick.location_id.id">
                                    <p>
                                        <span t-esc="pick.location_id.display_name"/> - <t t-esc="doc.get_location_address(pick.location_id.id)"/>
                                    </p>
                                </t>
                            </t>
                        </div>

                        <div style="display:table-cell;width:1%;">
                        </div>

                        <div class="well" style="display:table-cell;width:50%;padding:10px;vertical-align:top;">
                            <h4>
                                <strong>Delivery address:</strong>
                            </h4>
                            <strong>
                                <span t-field="doc.partner_id.display_name" />
                            </strong>
                            <br/>
                            <span t-field="doc.partner_id.street" />
                            <span t-field="doc.partner_id.street2" />
                            <br/>
                            <span t-field="doc.partner_id.zip" />
                            <span t-field="doc.partner_id.city" />
                            (<span t-field="doc.partner_id.state_id.code" />)
                            <span t-field="doc.partner_id.country_id" />
                            <br/>
                            <t t-if="doc.partner_id.phone">
                                <span>Phone:</span>
                                <span t-field="doc.partner_id.phone" />
                            </t><br/>
                            <t t-if="doc.partner_id.vat">
                                <span>VAT:</span>
                                <span t-field="doc.partner_shipping_id.vat" />
                            </t>
                        </div>
                    </div>
                </div>

                <div>
                    <div t-if="doc.picking_type=='outgoing'">
                        <strong>Warehouse:</strong>
                        <t t-foreach="doc.picking_ids" t-as="pick">
                            <p>
                                <t t-esc="doc.get_location_address(pick.location_id.id)"/><br/>
                            </p>
                        </t>
                    </div>
                    <strong> Delivery Note: </strong>
                    Under the terms of Italian Presidential Decree 472-96 of 14.08.1996
                </div>

                <h2>
                    <span t-if="doc.state in ['draft']">Draft document:</span>
                    <span t-if="doc.state not in ['draft']">Document:</span>
                    <small>
                        <span t-field="doc.display_name" />
                    </small>
                    <span t-if="doc.date"> of: </span>
                    <small>
                        <span t-field="doc.date"/>
                    </small>
                </h2>

                <table style="padding-top:10px;" class="table table-condensed delivery_data">
                    <tr>
                        <td width="33%">
                            <div name="transport" style="font-size:12px;">Reason of Transport</div>
                            <div t-field="doc.transport_reason_id" />
                        </td>
                        <td width="33%">
                            <div name="carriage" style="font-size:12px;">Carriage Condition</div>
                            <div t-field="doc.transport_condition_id" />
                        </td>
                        <td width="33%">
                            <div name="method_transport" style="font-size:12px;">Method of Transport / Carrier</div>
                            <span t-field="doc.transport_method_id" name="transport_method_id" />
                            <t t-if="doc.transport_method_id and doc.carrier_id"> / </t>
                            <span t-field="doc.carrier_id" name="carrier_id" />
                        </td>
                    </tr>
                </table>

                <table class="mt32 mb32 o_main_table table table-sm">
                    <thead>
                        <tr>
                            <t t-set="colspan" t-value="5"/>
                            <th class="text-left">
                                Product
                            </th>
                            <th class="text-left">
                                Description
                            </th>
                            <th class="text-right">
                                Quantity
                            </th>
                            <th class="text-right" groups="uom.group_uom">
                                UoM
                            </th>
                            <th t-if="doc.print_prices" class="text-right" style="white-space: nowrap;">
                                Unit price
                            </th>
                            <th t-if="doc.print_prices" class="text-right" groups="sale.group_discount_per_so_line">
                                Discount
                            </th>
                            <th t-if="doc.print_prices" class="text-right">
                                Taxes
                            </th>
                        </tr>
                    </thead>

                    <!--row delivery note-->
                    <tbody class="sale_tbody">
                        <t t-foreach="doc.line_ids" t-as="line">
                            <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                <t t-if="not line.display_type">
                                    <td>
                                        <span t-field="line.product_id.default_code" />
                                    </td>
                                    <td>
                                        <span t-field="line.name" />
                                        <t t-foreach="line.product_id.attribute_value_ids" t-as="attrib_value">
                                          <span t-esc=" '%s: %s' % (attrib_value.attribute_id.name,attrib_value.name)"/>
                                        </t>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_qty" />
                                    </td>
                                    <td class="text-right">
                                        <span t-field="line.product_uom_id" groups="uom.group_uom" />
                                    </td>
                                    <td t-if="doc.print_prices" class="text-right">
                                        <span t-field="line.price_unit" />
                                    </td>
                                    <td t-if="doc.print_prices"
                                        class="text-right"
                                        groups="sale.group_discount_per_so_line">
                                        <span t-field="line.discount" />%
                                    </td>
                                    <td t-if="doc.print_prices" class="text-right">
                                        <span t-esc="', '.join(map(lambda t: (t.description or t.name), line.tax_ids))" />
                                    </td>
                                </t>
                                <t t-else="">
                                    <td colspan="6">
                                        <span t-field="line.name" />
                                    </td>
                                </t>
                            </tr>
                            <tr t-if="line.product_id.tracking != 'none'">
                                <td colspan="99" style="font-size:10px;">
                                    <t t-foreach="line.move_id.move_line_ids" t-as="lot_line">
                                        lot / sn :
                                        <strong>
                                            <span t-field="lot_line.lot_id" />
                                        </strong>
                                        <t t-if="'use_date' in lot_line.lot_id.fields_get()">
                                            <t t-if="lot_line.lot_id.use_date">
                                                best before
                                                <strong>
                                                    <span t-field="lot_line.lot_id.use_date" t-options='{"format": "dd/MM/yyyy"}'/>
                                                </strong>
                                            </t>
                                        </t>
                                        <t t-if="line.product_qty != lot_line.qty_done">
                                            qty
                                            <span t-field="lot_line.qty_done"/>
                                        </t>
                                        ;
                                    </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>

                <table class="table table-condensed table-bordered delivery_data">
                    <tr>
                        <td>
                            <div name="good_description" style="font-size:10px;">Goods Description</div>
                            <div style="font-size:12px;" t-field="doc.goods_appearance_id"/>
                        </td>
                        <td>
                            <div name="gross_weight" style="font-size:10px;">Gross Weight</div>
                            <div class="text-right" style="font-size:12px;" t-field="doc.gross_weight"/>
                        </td>
                        <td>
                            <div name="net_weight" style="font-size:10px;">Net Weight</div>
                            <div class="text-right" style="font-size:12px;" t-field="doc.net_weight"/>
                        </td>
                        <td>
                            <div name="transport_date" style="font-size:10px;">DN date</div>
                            <div class="m-0" style="font-size:12px;" t-field="doc.transport_datetime"/>
                        </td>
                        <td>
                            <div name="packages" style="font-size:10px;">Packages</div>
                            <div class="text-right" style="font-size:12px;" t-field="doc.packages"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5" class="notes">
                            <div name="notes" style="font-size:10px;">Notes</div>
                            <br/>
                            <div class="signature" style="font-size:12px;" t-field="doc.note"/>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="5">
                            <table class="table table-condensed delivery_data">
                                <tr>
                                    <td>
                                        <div name="carrier_signature" style="font-size:10px;">Carrier's Signature</div>
                                        <br/>
                                        <div class="signature" style="font-size:12px;"/>
                                    </td>
                                    <td>
                                        <div name="driver_signature" style="font-size:10px;">Driver's Signature</div>
                                        <br/>
                                        <div class="signature" style="font-size:12px;"/>
                                    </td>
                                    <td>
                                        <div name="recipint_signature" style="font-size:10px;">Recipient's Signature</div>
                                        <br/>
                                        <div class="signature" style="font-size:12px;"/>
                                    </td>
                                </tr>
                            </table>
                        </td>
                    </tr>
                </table>
                <div class="oe_structure" />
            </div>
        </t>
    </template>

    <template id="delivery_note_report_main_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="l10n_it_delivery_note.delivery_note_report_template" t-lang="doc.partner_id.lang" />
            </t>
        </t>
    </template>

    <report id="delivery_note_report_action"
            model="stock.delivery.note"
            name="l10n_it_delivery_note.delivery_note_report_main_template"
            file="l10n_it_delivery_note.delivery_note_report_main_template"
            report_type="qweb-pdf"
            string="Delivery Note"
            print_report_name="'Delivery Note - %s' % object.display_name" />

</odoo>
