<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template
        id="portal_my_home_menu_delivery_note"
        name="Portal layout : delivery note menu entries"
        inherit_id="portal.portal_breadcrumbs"
        priority="30"
    >
        <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
            <li
                t-if="page_name == 'delivery_note'"
                t-attf-class="breadcrumb-item #{'active ' if not dn else ''}"
            >
                <a
                    t-if="dn"
                    t-attf-href="/my/delivery-notes?{{ keep_query() }}"
                >Delivery Notes</a>
                <t t-else="">Delivery Notes</t>
            </li>
            <li t-if="dn" class="breadcrumb-item active">
                <t t-out="dn.name" />
            </li>
        </xpath>
    </template>

    <template id="portal_my_delivery_notes" name="My Delivery Notes">
        <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True" />

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Delivery Notes</t>
            </t>
            <t t-if="not delivery_notes">
                <p class="alert alert-warning">
                    There are currently no delivery notes for your account.
                </p>
            </t>
            <t t-if="delivery_notes" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Delivery Note #</th>
                        <th class="text-right">Delivery Note Date</th>
                        <th class="text-right">Packages</th>
                    </tr>
                </thead>
                <t t-foreach="delivery_notes" t-as="dn">
                    <tr>
                        <td>
                            <a t-att-href="dn.get_portal_url()" t-att-title="dn.name">
                                <t t-out="dn.name" />
                            </a>
                        </td>
                        <td class="text-right">
                            <span t-field="dn.date" />
                        </td>
                        <td class="text-right">
                            <span t-field="dn.packages" />
                        </td>
                    </tr>
                </t>
            </t>
        </t>
    </template>

    <template
        id="portal_delivery_note_page"
        name="Delivery Note Portal Template"
        inherit_id="portal.portal_sidebar"
        primary="True"
    >
        <xpath expr="//div[hasclass('o_portal_sidebar')]" position="inside">
            <t t-set="o_portal_fullwidth_alert" groups="stock.group_stock_user">
                <t t-call="portal.portal_back_in_edit_mode">
                    <t
                        t-set="backend_url"
                        t-value="'/odoo/action-l10n_it_delivery_note.stock_delivery_note_action/' % dn.id"
                    />
                </t>
            </t>

            <div class="row o_portal_dn_sidebar">
                <!-- Sidebar -->
                <t t-call="portal.portal_record_sidebar">
                    <t t-set="classes" t-value="'col-lg-4 col-xxl-3 d-print-none'" />
                    <t t-set="title">
                        <h2 class="mb-0 text-break">
                            <b t-field="dn.name" />
                        </h2>
                        <div class="small">
                            <i class="fa fa-clock-o" />
                            <span
                                class="o_portal_sidebar_timeago ml4"
                                t-att-datetime="dn.date"
                            />
                        </div>
                    </t>

                    <t t-set="entries">
                        <div class="d-flex flex-column gap-4 mt-3">
                            <div class="d-flex flex-column gap-2">
                                <div
                                    class="o_download_pdf d-flex flex-lg-column flex-xl-row flex-wrap gap-2"
                                >
                                    <a
                                        class="btn btn-light o_download_btn flex-grow-1"
                                        t-att-href="dn.get_portal_url(report_type='pdf', download=True)"
                                        title="Download"
                                        role="button"
                                    >
                                        <i class="fa fa-download" /> Download
                                    </a>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>

                <!-- Page Content -->
                <div
                    class="o_portal_html_view position-relative bg-white shadow p-3 overflow-hidden"
                >
                    <div class="o_portal_html_loader text-center">
                        <i
                            class="fa fa-circle-o-notch fa-spin fa-2x fa-fw text-black-50"
                        />
                    </div>
                    <iframe
                        id="dn_html"
                        class="position-relative my-2"
                        width="100%"
                        height="100%"
                        frameborder="0"
                        scrolling="no"
                        t-att-src="dn.get_portal_url(report_type='html')"
                    />
                </div>
                <!-- chatter -->
                <div id="dn_communication" class="mt-4">
                    <h3>Communication history</h3>
                    <t t-call="portal.message_thread">
                        <t t-set="object" t-value="dn" />
                    </t>
                </div>
            </div>
        </xpath>
    </template>
</odoo>
