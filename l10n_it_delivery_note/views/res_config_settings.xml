<odoo>
    <record id="res_config_settings_form_view" model="ir.ui.view">
        <field name="name">res.config.settings.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//app/block[@name='operations_setting_container']"
                position="after"
            >
                <block title="Delivery Notes" name="delivery_notes_setting_container">
                    <setting id="required_partner_ref">
                        <field
                            name="group_required_partner_ref"
                            widget="upgrade_boolean"
                        />
                        <div class="row mt-2">
                            <div class="text-muted">
                                Block the validation of incoming DNs if the
                                "Partner reference" field is not set.
                            </div>
                        </div>
                    </setting>
                    <setting id="virtual_locations">
                        <div class="row mt-2">
                            <label for="virtual_locations_root" />
                            <div class="text-muted">
                                Select the root of all your virtual locations.<br />
                                Internal transfers between at least one virtual
                                locations won't generate automatically any DN
                                documents.
                            </div>
                            <field name="virtual_locations_root" />
                        </div>
                    </setting>
                    <setting id="ref_order_dn_report">
                        <field
                            name="display_ref_order_dn_report"
                            widget="upgrade_boolean"
                        />
                        <div class="row mt-2">
                            <div class="text-muted">
                                Prints Sale Order numbers on DN report (if there are any)
                            </div>
                        </div>
                    </setting>
                    <setting id="ref_customer_dn_report">
                        <field
                            name="display_ref_customer_dn_report"
                            widget="upgrade_boolean"
                        />
                        <div class="row mt-2">
                            <div class="text-muted">
                                Prints Sale Order numbers on DN report (if there are any)
                            </div>
                        </div>
                    </setting>
                    <setting id="ref_customer_dn_report">
                        <field
                            name="display_ref_customer_dn_report"
                            widget="upgrade_boolean"
                        />
                        <div class="row mt-2">
                            <div class="text-muted">
                                Prints Customer References on DN report (if there are any)
                            </div>
                        </div>
                    </setting>
                    <setting id="carrier_dn_report">
                        <field
                            name="display_carrier_dn_report"
                            widget="upgrade_boolean"
                        />
                        <div class="row mt-2">
                            <div class="text-muted">
                                Prints Carrier's name on DN report (if there are any)
                            </div>
                        </div>
                    </setting>
                    <setting id="delivery_method_dn_report">
                        <field
                            name="display_delivery_method_dn_report"
                            widget="upgrade_boolean"
                        />
                        <div class="row mt-2">
                            <div class="text-muted">
                                Prints Delivery Method on DN report (if there are any)
                            </div>
                        </div>
                    </setting>
                </block>
            </xpath>
        </field>
    </record>
</odoo>
