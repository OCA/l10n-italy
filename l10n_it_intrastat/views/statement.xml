        </record>
    
        <!--
        CUSTOM
        -->
        <record id="account_intrastat_custom_view_tree" model="ir.ui.view">
            <field name="name">account.intrastat.custom.view.tree</field>
            <field name="model">account.intrastat.custom</field>
