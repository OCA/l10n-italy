<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_company_form_intrastat_inherited" model="ir.ui.view">
            <field name="name">res.company.form.intrastat.inherited</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[last()]" position="after">
                    <group string="Impostazioni Intrastat">
                        <!-- Campi per le soglie -->
                        <field name="intrastat_goods_sale_threshold"/>
                        <field name="intrastat_goods_purchase_threshold"/>
                        <field name="intrastat_service_sale_threshold"/>
                        <field name="intrastat_service_purchase_threshold"/>
                        <!-- Campi per le posizioni fiscali -->
                        <field name="fiscal_position_goods_sale_id"/>
                        <field name="fiscal_position_goods_purchase_id"/>
                        <field name="fiscal_position_service_sale_id"/>
                        <field name="fiscal_position_service_purchase_id"/>
                        <!-- Campo per i destinatari delle email -->
                        <field name="intrastat_email_recipients"/>
                        <!-- Campo per abilitare/disabilitare l'invio delle email -->
                        <field name="intrastat_email_enabled"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
