<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_move_line_form_line_type" model="ir.ui.view">
        <field name="name">inherit.view.move.line.form</field>
        <field name="model">account.move.line</field>
        <field name="inherit_id" ref="account.view_move_line_form" />
        <field name="arch" type="xml">
            <field name="quantity" position="after">
                <field name="line_type" groups="base.group_no_one"/>
            </field>
        </field>
    </record>

    <record id="view_move_form_line_type" model="ir.ui.view">
        <field name="name">inherit.view.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='line_ids']/tree/field[@name='credit']" position="after">
                <field name="line_type" groups="base.group_no_one"/>
            </xpath>
        </field>
    </record>

</odoo>

