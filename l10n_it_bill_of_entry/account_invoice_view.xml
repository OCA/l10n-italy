<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

    	 <record model="ir.ui.view" id="invoice_supplier_form">
    	     <field name="name">account.invoice.supplier.form</field>
    	     <field name="model">account.invoice</field>
    	     <field name="inherit_id" ref="account.invoice_supplier_form"/>
    	     <field name="arch" type="xml">
    	     	<xpath expr="//field[@name='journal_id']" position="after">
    	     		<field name="customs_doc_type" />
	     		</xpath>
    	     	<xpath expr="//notebook/page[@string='Payments']" position="after">
    	     		<page string="Bill of Entries" attrs="{'invisible': [('customs_doc_type','=', False)]}">
    	     			<field name="supplier_bill_of_entry_ids" attrs="{'invisible': [('customs_doc_type','!=', 'supplier_invoice')]}"/>
    	     			<field name="supplier_invoice_ids" attrs="{'invisible': [('customs_doc_type','!=', 'bill_of_entry')]}"/>
    	     			<field name="forwarder_invoice_id" attrs="{'invisible': [('customs_doc_type','!=', 'bill_of_entry')]}"/>
    	     			<field name="forwarder_bill_of_entry_ids" attrs="{'invisible': [('customs_doc_type','!=', 'forwarder_invoice')]}"/>
    	     			<field name="bill_of_entry_cancellation_id" attrs="{'invisible': [('customs_doc_type','!=', 'forwarder_invoice')]}"/>
                        <button string="Make Bill of Entry" name="%(account_invoice_template.action_wizard_select_template)d" type="action" class="oe_highlight" states="draft" attrs="{'invisible': [('customs_doc_type','!=', 'forwarder_invoice')]}"/>
    	             </page>
    	         </xpath>
                <xpath expr="//notebook/page[@string='Invoice']/field[@name='invoice_line']/tree/field[@name='price_subtotal']" position="after">
                    <!--It seems attrs doesn't work -->
                    <field name="advance_customs_vat"/>
                </xpath>
    	     </field>
    	</record>

	</data>
</openerp>