<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_comunicazione_dati_iva_tree" model="ir.ui.view">
            <field name="name">comunicazione.dati_iva.tree</field>
            <field name="model">comunicazione.dati.iva</field>
            <field name="arch" type="xml">
                <tree string="Invoices data communications">
                    <field name="identificativo"/>
                    <field name="id_comunicazione"/>
                    <field name="dati_trasmissione"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="company_id"/>
                </tree>
            </field>
        </record>

        <record id="view_comunicazione_dati_iva_search" model="ir.ui.view">
            <field name="name">comunicazione.dati_iva.search</field>
            <field name="model">comunicazione.dati.iva</field>
            <field name="arch" type="xml">
                <search string="Invoices data communications">
                    <field name="identificativo"/>
                    <field name="id_comunicazione"/>
                    <field name="dati_trasmissione"/>
                    <field name="company_id"/>
                </search>
            </field>
        </record>

        <record id="view_comunicazione_dati_iva_form" model="ir.ui.view">
            <field name="name">comunicazione.dati.iva.form</field>
            <field name="model">comunicazione.dati.iva</field>
            <field name="arch" type="xml">
                <form string="Invoices data communication">
                    <header>
                        <button name="compute_values" string="Compute values" type="object" class="oe_highlight"
                                attrs="{'invisible':[('dati_trasmissione', '=', 'ANN')]}"
                                confirm="This will load invoices data, according to the selected time interval. Proceed?"/>
                        <button type="action" name="%(action_compute_fiscal_document_type)d"
                                string="Assign fiscal document type"
                                attrs="{'invisible':[('dati_trasmissione', '=', 'ANN')]}"/>
                        <button name="check_errors" string="Check errors" type="object"
                                attrs="{'invisible':[('dati_trasmissione', '=', 'ANN')]}"/>
                        <button type="action" name="%(action_wizard_split_big_communication)d"
                                string="Split big communication"
                                attrs="{'invisible':[('dati_trasmissione', '=', 'ANN')]}"/>
                    </header>
                    <sheet>
                        <group name="company">
                            <group>
                            <field name="company_id" widget="selection"/>
                            <field name="declarant_fiscalcode"/>
                            <field name="codice_carica_id" attrs="{'required':[('declarant_fiscalcode', '!=', False)]}"/>
                            </group>
                            <group>
                            <field name="identificativo"/>
                            <field name="id_comunicazione"
                                   attrs="{'required':[('dati_trasmissione', '=', 'ANN')]}"/>
                            </group>
                        </group>
                        <newline/>
                        <group name="Period">
                            <group>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </group>
                            <group>
                            </group>
                        </group>
                        <group name="Summary">
                            <field name="dati_trasmissione" widget="radio"/>
                            <field name="esterometro"/>
                        </group>
                        <notebook attrs="{'invisible':[('dati_trasmissione', '!=', 'DTE')]}">
                            <page string="Seller" name="page_cedente">
                                <group name="cedente">
                                    <field name="partner_cedente_id" string="Partner"/>
                                    <field name="cedente_IdFiscaleIVA_IdPaese" string="Country ID"/>
                                    <field name="cedente_IdFiscaleIVA_IdCodice" string="Fiscal identifier"/>
                                    <field name="cedente_CodiceFiscale" string="Fiscal code"/>
                                    <field name="cedente_Denominazione" string="Company, denomination or business name"/>
                                    <field name="cedente_Nome" string="Natural person name"/>
                                    <field name="cedente_Cognome" string="Natural person surname"/>
                                </group>
                            </page>
                            <page string="Headquarters">
                                <group name="cedente_sede">
                                    <field name="cedente_sede_Indirizzo" string="Headquarters address"/>
                                    <field name="cedente_sede_NumeroCivico" string="Street number"/>
                                    <field name="cedente_sede_Cap" string="ZIP"/>
                                    <field name="cedente_sede_Comune" string="City"/>
                                    <field name="cedente_sede_Provincia" string="State"/>
                                    <field name="cedente_sede_Nazione" string="Country"/>
                                </group>
                            </page>
                            <page string="Permanent establishment">
                                <group name="cedente_stabile_organizzazione">
                                    <field name="cedente_so_Indirizzo" string="Permanent establishment address"/>
                                    <field name="cedente_so_NumeroCivico" string="Street number"/>
                                    <field name="cedente_so_Cap" string="ZIP"/>
                                    <field name="cedente_so_Comune" string="City"/>
                                    <field name="cedente_so_Provincia" string="State"/>
                                    <field name="cedente_so_Nazione" string="Country"/>
                                </group>
                            </page>
                            <page string="Fiscal representative">
                                <group name="cedente_rappresentante_fiscale">
                                    <field name="cedente_rf_IdFiscaleIVA_IdPaese" string="Country ID"/>
                                    <field name="cedente_rf_IdFiscaleIVA_IdCodice" string="Fiscal identifier"/>
                                    <field name="cedente_rf_Denominazione" string="Company, denomination or business name"/>
                                    <field name="cedente_rf_Nome" string="Natural person name"/>
                                    <field name="cedente_rf_Cognome" string="Natural person surname"/>
                                </group>
                            </page>
                        </notebook>
                        <notebook attrs="{'invisible':[('dati_trasmissione', '!=', 'DTR')]}">
                           <page string="Assignee" name="page_cessionario">
                                <group name="cessionario">
                                    <field name="partner_cessionario_id" string="Partner"/>
                                    <field name="cessionario_IdFiscaleIVA_IdPaese" string="Country ID"/>
                                    <field name="cessionario_IdFiscaleIVA_IdCodice" string="Fiscal identifier"/>
                                    <field name="cessionario_CodiceFiscale" string="Fiscal code"/>
                                    <field name="cessionario_Denominazione" string="Company, denomination or business name"/>
                                    <field name="cessionario_Nome" string="Natural person name"/>
                                    <field name="cessionario_Cognome" string="Natural person surname"/>
                                </group>
                            </page>
                            <page string="Headquarters">
                                <group name="cessionario_sede">
                                    <field name="cessionario_sede_Indirizzo" string="Headquarters address"/>
                                    <field name="cessionario_sede_NumeroCivico" string="Street number"/>
                                    <field name="cessionario_sede_Cap" string="ZIP"/>
                                    <field name="cessionario_sede_Comune" string="City"/>
                                    <field name="cessionario_sede_Provincia" string="State"/>
                                    <field name="cessionario_sede_Nazione" string="Country"/>
                                </group>
                            </page>
                            <page string="Permanent establishment">
                                <group name="cessionario_stabile_organizzazione">
                                    <field name="cessionario_so_Indirizzo" string="Permanent establishment address"/>
                                    <field name="cessionario_so_NumeroCivico" string="Street number"/>
                                    <field name="cessionario_so_Cap" string="ZIP"/>
                                    <field name="cessionario_so_Comune" string="City"/>
                                    <field name="cessionario_so_Provincia" string="State"/>
                                    <field name="cessionario_so_Nazione" string="Country"/>
                                </group>
                            </page>
                            <page string="Fiscal representative">
                                <group name="cessionario_rappresentante_fiscale">
                                    <field name="cessionario_rf_IdFiscaleIVA_IdPaese" string="Country ID"/>
                                    <field name="cessionario_rf_IdFiscaleIVA_IdCodice" string="Fiscal identifier"/>
                                    <field name="cessionario_rf_Denominazione" string="Company, denomination or business name"/>
                                    <field name="cessionario_rf_Nome" string="Natural person name"/>
                                    <field name="cessionario_rf_Cognome" string="Natural person surname"/>
                                </group>
                            </page>
                        </notebook>
                        <notebook attrs="{'invisible':[('dati_trasmissione', '=', 'ANN')]}">
                            <page string="Customer invoices"
                                attrs="{'invisible':[('dati_trasmissione', '!=', 'DTE')]}">
                                <group>
                                    <field name="fatture_emesse_ids" string="Customer invoices" nolabel="1">
                                    </field>
                                </group>
                            </page>
                            <page string="Supplier bills"
                                attrs="{'invisible':[('dati_trasmissione', '!=', 'DTR')]}">
                                <group>
                                    <field name="fatture_ricevute_ids" string="Supplier bills" nolabel="1">
                                    </field>
                                </group>
                            </page>
                            <page string="Errors">
                                <group>
                                    <field name="errors" nolabel="1"/>
                                </group>
                            </page>
                            <page string="Splitting note" attrs="{'invisible': [('splitting_note', '=', False)]}">
                                <group>
                                    <field name="splitting_note" nolabel="1"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

