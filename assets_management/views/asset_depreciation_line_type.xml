<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="asset_depreciation_line_type_tree_view">
        <field name="name">asset.dep.line.type.tree.view</field>
        <field name="model">asset.depreciation.line.type</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="code" />
                <field name="type" />
                <field name="company_id" groups="base.group_multi_company" />
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="asset_depreciation_line_type_form_view">
        <field name="name">asset.dep.line.type.form.view</field>
        <field name="model">asset.depreciation.line.type</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="name" />
                    <field name="code" />
                    <field name="type" />
                    <field name="company_id" groups="base.group_multi_company" />
                </group>
            </form>
        </field>
    </record>

    <record id="action_asset_depreciation_line_type" model="ir.actions.act_window">
        <field name="name">Depreciation Line Amount Types</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">asset.depreciation.line.type</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="asset_depreciation_line_type_tree_view" />
    </record>

    <menuitem
        id="menu_asset_depreciation_line_type"
        action="action_asset_depreciation_line_type"
        name="Depreciation Line Amount Types"
        parent="menu_asset_configuration"
        sequence="15"
    />

</odoo>
