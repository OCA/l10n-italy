<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="asset_generate_warning_view" model="ir.ui.view">
        <field name="name">asset.generate.warning.view</field>
        <field name="model">asset.generate.warning</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <field name="reason_lines" readonly="1">
                    <tree>
                        <field name="reason" />
                    </tree>
                </field>
                <footer>
                    <button
                        name="do_generate"
                        string="Conferma generazione"
                        type="object"
                        class="oe_highlight"
                    />

                    <button string="Chiudi" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
