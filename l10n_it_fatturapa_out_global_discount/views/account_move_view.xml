<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record model="ir.ui.view" id="view_account_move_hide_global_discount_form">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account_global_discount.view_move_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='amount_untaxed_before_global_discounts']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='amount_global_discount']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
        </field>
    </record>

</odoo>
