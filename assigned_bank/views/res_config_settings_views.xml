<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="res_config_settings_view_form_accountt_extend" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.account.extend</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='account_yodlee']" position="before">
                <div class="o_form_label">Default Assigned Banks</div>
                <div class="row mt16 o_settings_container">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="partner_assigned_bank_id"/>
                            <field name="partner_assigned_bank_id" />
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane"/>
                        <div class="o_setting_right_pane">
                            <label for="partner_assigned_income_bank_id"/>
                            <field name="partner_assigned_income_bank_id" />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>

