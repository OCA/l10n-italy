<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <template id="report_registro_iva">
        <t t-call="web.html_container">
            <t t-if="registry_type == 'customer'">
                <t
                    t-set="title"
                    t-value="tax_registry_name or 'Registro IVA vendite'"
                />
            </t>
            <t t-if="registry_type == 'supplier'">
                <t
                    t-set="title"
                    t-value="tax_registry_name or 'Registro IVA acquisti'"
                />
            </t>
            <t t-if="registry_type == 'corrispettivi'">
                <t
                    t-set="title"
                    t-value="tax_registry_name or 'Registro corrispettivi'"
                />
            </t>
            <t t-set="l10n_it_count_fiscal_year" t-value="year_footer" />
            <t t-call="l10n_it_account.internal_layout">
                <div class="article">
                    <t t-set="print_details" t-value="1" />
                    <t t-if="only_totals == True">
                        <t t-set="print_details" t-value="0" />
                    </t>
                    <t t-set="initial_from_date" t-value="data['from_date']" />
                    <t t-set="initial_to_date" t-value="data['to_date']" />
                    <t
                        t-set="colspan_val"
                        t-value="4"
                        t-if="registry_type == 'corrispettivi'"
                    />
                    <t
                        t-set="colspan_val"
                        t-value="9"
                        t-if="registry_type != 'corrispettivi'"
                    />
                    <t t-set="prev_move_date" t-value="False" />
                    <t t-set="move_date" t-value="False" />
                    <table style="width:100%; font-size: small;" cellspacing="0">
                        <thead>
                            <tr class="first_th_row">
                                <td
                                    t-att-colspan="colspan_val"
                                    style="padding:10;"
                                    t-esc="tax_registry_name + ' Periodo di stampa dal ' + from_date + ' al ' + to_date"
                                />
                            </tr>

                            <t t-if="print_details > 0 ">
                                <tr
                                    style="page-break-inside: avoid"
                                    name="vat_header_invoice"
                                >
                                    <th class="left_without_line">REG. DATE</th>
                                    <th class="left_without_line">REG. NUM.</th>
                                    <t t-if="registry_type != 'corrispettivi'">
                                        <th class="left_without_line">REASON</th>
                                        <th class="left_without_line">INV. DATE</th>
                                        <th class="left_without_line">INV. NUM.</th>
                                        <th class="left_without_line">BUSINESS NAME</th>
                                        <th class="left_without_line">TIN</th>
                                    </t>
                                    <th class="left_without_line" />
                                    <th class="right_without_line">TOTAL</th>
                                </tr>
                                <tr
                                    style="page-break-inside: avoid"
                                    name="vat_header_tax"
                                >
                                    <t t-if="registry_type != 'corrispettivi'">
                                        <th class="left_with_line_bottom" />
                                        <th class="left_with_line_bottom" />
                                        <th class="left_with_line_bottom" />
                                        <th class="left_with_line_bottom" />
                                        <th class="left_with_line_bottom" />
                                    </t>
                                    <th
                                        class="left_with_line_bottom"
                                    >Tax description</th>
                                    <th class="right_with_line_bottom">Taxable</th>
                                    <th class="right_with_line_bottom">Tax</th>
                                    <th class="right_with_line_bottom" />
                                </tr>
                            </t>
                        </thead>

                        <tbody>
                            <t t-set="total_used_taxes" t-value="env['account.tax']" />
                            <t t-foreach="get_move(doc_ids)" t-as="move">
                                <t
                                    t-set="taxes_tuple"
                                    t-value="tax_lines(move, data)"
                                />
                                <t t-set="inv_taxes" t-value="taxes_tuple[0]" />
                                <t t-set="used_taxes" t-value="taxes_tuple[1]" />
                                <t
                                    t-set="total_used_taxes"
                                    t-value="total_used_taxes | used_taxes"
                                />
                                <t
                                    t-if="prev_move_date and prev_move_date != move.date and daily_totals and not only_totals"
                                >
                                    <tr>
                                        <td t-att-colspan="colspan_val">
                                            <t
                                                t-set="data"
                                                t-esc="data.update({'from_date': prev_move_date, 'to_date': prev_move_date})"
                                            />
                                            <t
                                                t-call="l10n_it_vat_registries.daily_totals_template"
                                            />
                                        </td>
                                    </tr>
                                </t>
                                <t
                                    t-set="prev_move_date"
                                    t-value="move.date"
                                    t-if="prev_move_date != move.date"
                                />
                                <t t-foreach="inv_taxes" t-as="line">
                                    <t t-if="print_details > 0 ">
                                        <t
                                            t-set="line_class_left"
                                            t-value="left_without_line"
                                        />
                                        <t
                                            t-set="line_class_right"
                                            t-value="right_without_line"
                                        />
                                        <t t-if="line['index'] == 0">
                                            <tr
                                                style="page-break-inside: avoid; border:1px solid #fff;"
                                                name="vat_body_invoice"
                                            >
                                                <!-- Data registrazione -->
                                                <td class="left_without_line_bold">
                                                    <div
                                                        style="page-break-inside: avoid"
                                                        t-esc="format_date(move.date,date_format)"
                                                    />
                                                </td>
                                                <!-- Numero registrazione -->
                                                <td class="left_without_line_bold">
                                                    <div
                                                        style="page-break-inside: avoid"
                                                        t-esc="move.name"
                                                    />
                                                </td>
                                                <t
                                                    t-if="registry_type != 'corrispettivi'"
                                                >
                                                    <!-- Causale -->
                                                    <td class="left_without_line_bold">
                                                        <div
                                                            style="page-break-inside: avoid"
                                                            t-esc="line['invoice_type']"
                                                        />
                                                    </td>
                                                    <!-- Data fattura -->
                                                    <td class="left_without_line_bold">
                                                        <div
                                                            style="page-break-inside: avoid"
                                                            t-esc="format_date(line['invoice_date'],date_format)"
                                                        />
                                                    </td>
                                                    <t
                                                        t-if="move.journal_id.type == 'purchase'"
                                                    >
                                                        <!-- Numero fattura (fornitore)-->
                                                        <td
                                                            class="left_without_line_bold"
                                                        >
                                                            <div
                                                                style="page-break-inside: avoid"
                                                                t-esc="move.ref"
                                                            />
                                                        </td>
                                                    </t>
                                                    <t
                                                        t-if="move.journal_id.type == 'sale'"
                                                    >
                                                        <!-- Numero fattura -->
                                                        <td
                                                            class="left_without_line_bold"
                                                        >
                                                            <div
                                                                style="page-break-inside: avoid"
                                                                t-esc="move.name"
                                                            />
                                                        </td>
                                                    </t>
                                                    <!-- Ragione sociale -->
                                                    <td class="left_without_line_bold">
                                                        <div
                                                            style="page-break-inside: avoid"
                                                            t-esc="move.partner_id.name"
                                                        />
                                                    </td>
                                                    <!-- PIVA -->
                                                    <td class="left_without_line_bold">
                                                        <div
                                                            style="page-break-inside: avoid"
                                                            t-esc="move.partner_id.vat"
                                                        />
                                                    </td>
                                                </t>
                                                <td class="left_without_line" />
                                                <!-- totale -->
                                                <td class="right_without_line_bold">
                                                    <div
                                                        style="page-break-inside: avoid"
                                                        t-esc="formatLang(env, invoice_total(move))"
                                                    />
                                                </td>
                                            </tr>
                                        </t>
                                        <tr
                                            style="page-break-inside: avoid; "
                                            name="vat_body_tax"
                                        >
                                            <t t-if="registry_type != 'corrispettivi'">
                                                <td class="left_without_line" />
                                                <td class="left_without_line" />
                                                <td class="left_without_line" />
                                                <td class="left_without_line" />
                                                <td class="left_without_line" />
                                            </t>
                                            <!--  imposta -->
                                            <td class="left_without_line"><div
                                                    style="page-break-inside: avoid"
                                                    t-esc="(line['tax_code_name'])"
                                                /></td>
                                            <!-- base -->
                                            <td class="right_without_line"><div
                                                    style="page-break-inside: avoid"
                                                    t-esc="formatLang(env, line['base'])"
                                                /></td>
                                            <!-- tax -->
                                            <td class="right_without_line"><div
                                                    style="page-break-inside: avoid"
                                                    t-esc="formatLang(env, line['tax'])"
                                                /></td>
                                            <td class="left_without_line" />
                                        </tr>
                                    </t>
                                </t>
                            </t>
                            <t
                                t-if="prev_move_date and daily_totals and not only_totals"
                            >
                                <tr>
                                    <td t-att-colspan="colspan_val">
                                        <t
                                            t-set="data"
                                            t-esc="data.update({'from_date': prev_move_date, 'to_date': prev_move_date})"
                                        />
                                        <t
                                            t-call="l10n_it_vat_registries.daily_totals_template"
                                        />
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                    <br />
                    <t t-if="only_totals and daily_totals">
                        <t t-call="l10n_it_vat_registries.daily_totals_template" />
                    </t>
                    <t t-set="tot_base" t-value="0" />
                    <t t-set="tot_tax" t-value="0" />
                    <t t-set="tot_ded" t-value="0" />
                    <t t-set="tot_unded" t-value="0" />
                    <t
                        t-set="data"
                        t-esc="data.update({'from_date': initial_from_date, 'to_date': initial_to_date})"
                    />
                    <div style="page-break-inside: avoid;">
                        <table style="width:100%;">
                            <tr>
                                <td
                                    colspan="2"
                                    style="vertical-align:text-top;padding:10"
                                >
                                    <h3>Totali</h3>
                                    <table style="width:100%;">
                                        <thead>
                                            <tr>
                                                <th
                                                    class="left_without_line_bold"
                                                >Description</th>
                                                <th
                                                    class="right_without_line_bold"
                                                >Taxable</th>
                                                <th
                                                    class="right_without_line_bold"
                                                >Tax</th>
                                                <th
                                                    class="right_without_line_bold"
                                                >Deductible</th>
                                                <th
                                                    class="right_without_line_bold"
                                                >Non-Deductible</th>
                                            </tr>
                                        </thead>
                                        <t
                                            t-foreach="total_used_taxes.sorted('name')"
                                            t-as="total_used_tax"
                                        >

                                            <t
                                                t-set="tax_code_tuple"
                                                t-value="compute_totals_tax(total_used_tax, data)"
                                            />
                                            <t
                                                t-set="tot_base"
                                                t-value="tot_base + tax_code_tuple[1]"
                                            />
                                            <t
                                                t-set="tot_tax"
                                                t-value="tot_tax + tax_code_tuple[2]"
                                            />
                                            <t
                                                t-set="tot_ded"
                                                t-value="tot_ded + tax_code_tuple[3]"
                                            />
                                            <t
                                                t-set="tot_unded"
                                                t-value="tot_unded + tax_code_tuple[4]"
                                            />
                                            <tr>
                                                <td
                                                    class="left_without_line"
                                                    t-esc="tax_code_tuple[0]"
                                                />
                                                <td
                                                    class="right_without_line"
                                                    t-esc="formatLang(env, tax_code_tuple[1])"
                                                />
                                                <td
                                                    class="right_without_line"
                                                    t-esc="formatLang(env, tax_code_tuple[2])"
                                                />
                                                <td
                                                    class="right_without_line"
                                                    t-esc="formatLang(env, tax_code_tuple[3])"
                                                />
                                                <td
                                                    class="right_without_line"
                                                    t-esc="formatLang(env, tax_code_tuple[4])"
                                                />
                                            </tr>
                                        </t>
                                        <tr>
                                            <td
                                                class="left_without_line_bold"
                                            >Totale generale euro</td>
                                            <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tot_base)"
                                            />
                                            <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tot_tax)"
                                            />
                                            <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tot_ded)"
                                            />
                                            <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tot_unded)"
                                            />
                                        </tr>
                                    </table>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <template id="daily_totals_template">
        <t t-set="daily_tot_base" t-value="0" />
        <t t-set="daily_tot_tax" t-value="0" />
        <t t-set="daily_tot_ded" t-value="0" />
        <t t-set="daily_tot_unded" t-value="0" />
        <div
            style="page-break-inside: avoid; width:100%;"
            class="mb-5"
            name="daily_totals_div"
        >
            <t t-set="tax_daily_totals" t-value="get_tax_daily_totals(doc_ids, data)" />
            <t t-foreach="tax_daily_totals" t-as="tax_date">
                <table style="width:100%;">
                    <tr>
                        <td style="vertical-align:text-top;padding:10">
                            <t t-if="only_totals and daily_totals">
                                <h3><t
                                        t-esc="format_date(tax_date, date_format)"
                                    /></h3>
                            </t>
                            <table style="width:100%;">
                                <thead>
                                    <tr>
                                        <th class="left_without_line_bold">
                                            Description
                                        </th>
                                        <th class="right_without_line_bold">
                                            Taxable
                                        </th>
                                        <th class="right_without_line_bold">
                                            Tax
                                        </th>
                                        <th class="right_without_line_bold">
                                            Deductible
                                        </th>
                                        <th class="right_without_line_bold">
                                            Non-Deductible
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t
                                        t-foreach="tax_daily_totals[tax_date]"
                                        t-as="tax_info"
                                    >
                                    <tr>
                                        <td
                                                class="left_without_line_bold"
                                                t-esc="tax_info[0]"
                                            />
                                        <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tax_info[1])"
                                            />
                                        <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tax_info[2])"
                                            />
                                        <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tax_info[3])"
                                            />
                                        <td
                                                class="right_without_line_bold"
                                                t-esc="formatLang(env, tax_info[4])"
                                            />
                                    </tr>
                                    <t
                                            t-set="daily_tot_base"
                                            t-value="daily_tot_base + tax_info[1]"
                                        />
                                    <t
                                            t-set="daily_tot_tax"
                                            t-value="daily_tot_tax + tax_info[2]"
                                        />
                                    <t
                                            t-set="daily_tot_ded"
                                            t-value="daily_tot_ded + tax_info[3]"
                                        />
                                    <t
                                            t-set="daily_tot_unded"
                                            t-value="daily_tot_unded + tax_info[4]"
                                        />
                                    </t>
                                    <tr class="border-top">
                                        <t t-if="not only_totals and daily_totals">
                                            <t
                                                t-set="daily_totals_text"
                                                t-value="' del giorno ' + format_date(tax_date, date_format)"
                                            />
                                        </t>
                                        <t t-else="only_totals and daily_totals">
                                            <t
                                                t-set="daily_totals_text"
                                                t-value="giornaliero"
                                            />
                                        </t>
                                        <td class="left_without_line_bold">Totale <span
                                                t-esc="daily_totals_text"
                                            /> euro </td>
                                        <td
                                            class="right_without_line_bold"
                                            t-esc="formatLang(env, daily_tot_base)"
                                        />
                                        <td
                                            class="right_without_line_bold"
                                            t-esc="formatLang(env, daily_tot_tax)"
                                        />
                                        <td
                                            class="right_without_line_bold"
                                            t-esc="formatLang(env, daily_tot_ded)"
                                        />
                                        <td
                                            class="right_without_line_bold"
                                            t-esc="formatLang(env, daily_tot_unded)"
                                        />
                                    </tr>
                                </tbody>
                            </table>
                        </td>
                    </tr>
                </table>
            </t>
        </div>
    </template>

</odoo>
