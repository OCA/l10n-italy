<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Region Tree -->
        <record id="view_country_region_tree" model="ir.ui.view">
            <field name="name">res.it.region.tree</field>
            <field name="model">res.it.region</field>
            <field name="arch" type="xml">
                <tree string="Region">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="country_id"/>
                </tree>
            </field>
        </record>

        <!-- Region Form -->
        <record id="view_country_region_form" model="ir.ui.view">
            <field name="name">res.it.region.form</field>
            <field name="model">res.it.region</field>
            <field name="arch" type="xml">
                <form string="Region">
                    <group>
                        <field name="name"/>
                        <field name="code"/>
                        <field name="country_id" options='{"no_open": True}'/>
                    </group>
                </form>
            </field>
        </record>

        <!-- Company Form -->
        <record id="view_company_region_form_ext" model="ir.ui.view">
            <field name="name">res.company.region.form.ext</field>
            <field name="model">res.company</field>
            <field name="inherit_id" ref="base.view_company_form"/>
            <field name="arch" type="xml">
                <field name="state_id" position="after">
                    <field name="it_region_id" class="o_address_state" placeholder="Region" options='{"no_open": True}'/>
                </field>
            </field>
        </record>

         <!-- Open partner address region -->
        <record id="view_partner_address_region_form_ext" model="ir.ui.view">
            <field name="name">res.partner.region.address.form.ext</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_address_form"/>
            <field name="priority" eval="20"/>
            <field name="arch" type="xml">
                <field name="state_id" position="after">
                    <field name="it_region_id" class="o_address_state" placeholder="Region" options='{"no_open": True}'/>
                </field>
            </field>
        </record>

        <!-- Partner Form -->
        <record id="view_partner_region_form_ext" model="ir.ui.view">
            <field name="name">res.partner.region.form.ext</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/group[1]/group[1]/div[hasclass('o_address_format')]/field[@name='country_id']" position="before">
                                <field name="it_region_id" class="o_address_country" placeholder="Region"
                                       options="{'no_create_edit': True,'no_quick_create':True,'no_create':True,'no_open':True}"
                                       attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"
                                       context="{'it_region_id': country_id, 'zip': zip}"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[1]/field[@name='child_ids']/kanban/field[@name='country_id']"
                       position="before">
                    <field name="it_region_id"/>
                </xpath>
                <xpath expr="/form/sheet/notebook/page[1]/field[@name='child_ids']/form/sheet/group/group[1]/div/div[hasclass('o_address_format')]//field[@name='country_id']" position="before">
                    <field name="it_region_id" class="o_address_country" placeholder="Region" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                </xpath>
            </field>
        </record>

        <!-- Filter -->
         <record id="view_res_partner_region_filter" model="ir.ui.view">
            <field name="name">res.partner.select.region</field>
             <field name="inherit_id" ref="base.view_res_partner_filter"/>
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <xpath expr="//search">
                    <group expand="0" string="Group By">
                        <filter name="group_region" string="Region" context="{'group_by': 'it_region_id'}"/>
                    </group>
                </xpath>
            </field>
         </record>

    </data>
</odoo>
