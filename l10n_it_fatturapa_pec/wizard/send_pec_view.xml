<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="wizard_fatturapa_send_pec_view" model="ir.ui.view">
        <field name="name">wizard_fatturapa_send_pec_view</field>
        <field name="model">wizard.fatturapa.send.pec</field>
        <field name="arch" type="xml">
            <form string="Send Electronic Invoice">
                <sheet>
                    <group>
                        <separator colspan="2" string="Selected files will be sent to the Exchange System"/>
                    </group>
                </sheet>
                <footer>
                    <button name="send_pec" string="Send"
                            type="object" class="oe_highlight"/>
                    <button special="cancel" string="Cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <act_window id="action_wizard_fatturapa_send_pec"
                key2="client_action_multi"
                name="Send Electronic Invoice"
                res_model="wizard.fatturapa.send.pec"
                src_model="fatturapa.attachment.out"
                target="new"
                view_id="wizard_fatturapa_send_pec_view"
                view_mode="form"/>
</odoo>
