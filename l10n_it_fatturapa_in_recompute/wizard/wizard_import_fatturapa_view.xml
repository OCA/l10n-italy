<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="wizard_import_fatturapa_form_view" model="ir.ui.view">
        <field name="name">Electronic Bill Import</field>
        <field name="model">wizard.import.fatturapa</field>
        <field name="inherit_id" ref="l10n_it_fatturapa_in.wizard_import_fatturapa_form_view"/>
        <field name="arch" type="xml">
            <field name="e_invoice_detail_level" position="before">
                <field name="compute_on_einvoice_values" invisible="0"/>
            </field>
            <field name="e_invoice_detail_level" position="attributes">
                <attribute name="attrs">{'readonly': [('compute_on_einvoice_values', '=', True)]}</attribute>
            </field>
            <field name="price_decimal_digits" position="attributes">
                <attribute name="attrs">{'invisible': [('compute_on_einvoice_values', '=', True)]}</attribute>
            </field>
            <field name="quantity_decimal_digits" position="attributes">
                <attribute name="attrs">{'invisible': [('compute_on_einvoice_values', '=', True)]}</attribute>
            </field>
            <field name="discount_decimal_digits" position="attributes">
                <attribute name="attrs">{'invisible': [('compute_on_einvoice_values', '=', True)]}</attribute>
            </field>
        </field>
    </record>

</odoo>
