<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_pos_config_printer_form" model="ir.ui.view">
        <field name="name">pos.config.form.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form/sheet/div[3]" position="after">
                <block title="Fiscal printer" id="fiscal_epos_print" >
                    <div class="row mt16 o_settings_container">
                        <setting string="Printer address" help="The hostname or IP address of the fiscal printer">
                            <div class="row mt16">
                                <field name="printer_ip" colspan="4" nolabel="1" readonly="False" />
                            </div>
                        </setting>
                        <setting> 
                            <field name="show_receipt_when_printing" readonly="False" />
                        </setting>
                        <setting>
                            <field name="use_https" string="Use https" readonly="False" />
                        </setting>
                        <setting> 
                            <field name="fiscal_cashdrawer" readonly="False" />
                        </setting>     
                        <setting string="Fiscal Printer Serial">
                            <div class="content-group mt16">
                                <field
                                    name="fiscal_printer_serial"
                                    colspan="4"
                                    nolabel="1"
                                />
                            </div>
                        </setting>
                    </div>
                </block>
            </xpath>
        </field>
    </record>

    <record id="view_res_config_settings_printer_form" model="ir.ui.view">
        <field name="name">res.config.settings.form.printer.view</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <block id="restaurant_section" position="before">
                <block title="Fiscal printer" id="fiscal_epos_print" >
                    <setting string="Printer address" help="The hostname or IP address of the fiscal printer">
                        <div class="row mt16">
                            <field name="printer_ip" colspan="4" nolabel="1" readonly="False" />
                        </div>
                    </setting>
                    <setting> 
                        <field name="show_receipt_when_printing" readonly="False" />
                    </setting>
                    <setting>
                        <field name="use_https" string="Use https" readonly="False" />
                    </setting>
                    <setting> 
                        <field name="fiscal_cashdrawer" readonly="False" />
                    </setting>     
                    <setting string="Fiscal Printer Serial">
                        <div class="content-group mt16">
                            <field
                                name="fiscal_printer_serial"
                                colspan="4"
                                nolabel="1"
                            />
                        </div>
                    </setting>
                </block>
            </block>
        </field>
    </record>

    <record id="view_pos_pos_form_refund_info" model="ir.ui.view">
        <field name="name">pos.order.form</field>
        <field name="model">pos.order</field>
        <field name="inherit_id" ref="point_of_sale.view_pos_pos_form" />
        <field name="arch" type="xml">
            <xpath expr='//notebook' position="inside">
                <page name="rt_data" string="RT data">
                    <group>
                        <group string="Receipt">
                            <field name="fiscal_receipt_number" />
                            <field name="fiscal_receipt_amount" />
                            <field name="fiscal_receipt_date" />
                            <field name="fiscal_z_rep_number" />
                            <field name="fiscal_printer_serial" />
                            <field
                                name="fiscal_printer_debug_info"
                                groups="base.group_no_one"
                                readonly="True"
                            />
                        </group>
                        <group string="Refund Info">
                            <field name="refund_date" />
                            <field name="refund_report" />
                            <field name="refund_doc_num" />
                            <field name="refund_cash_fiscal_serial" />
                        </group>
                        <group string="Lottery">
                            <field name="lottery_code" />
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

</odoo>
