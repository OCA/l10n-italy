<?xml version="1.0" ?>
<odoo>

    <!--========================================================-->
    <!--                    RES.PARTNER - FORM                    -->
    <!--========================================================-->
    <record id="view_partner_form_riba" model="ir.ui.view">
        <field name="name">res.parner.form.riba</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="groups_id" eval="[(4, ref('account.group_account_user'))]" />
        <field name="arch" type="xml">
            <group name="accounting_entries" position="after">
                <group string="C/O" name="riba">
                    <field name="group_riba" />
                    <field name="riba_exclude_expenses" />
                    <field
                        name="riba_policy_expenses"
                        attrs="{'invisible': [('riba_exclude_expenses', '=', True)]}"
                    />
                </group>
            </group>
        </field>
    </record>

</odoo>
